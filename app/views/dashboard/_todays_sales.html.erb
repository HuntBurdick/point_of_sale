<% @current_sales = Sale.find(:all) %>

<% @total_price = 0.00 %>


<% for sale in @current_sales %>
	<% if sale.created_at.in_time_zone("Mountain Time (US & Canada)").to_date == Time.now.in_time_zone("Mountain Time (US & Canada)") %>
		<% @total_price += sale.total_amount %>
	<% end %>
<% end %>

<div class="todays_total">
	Sales Total for Today: $<%= @total_price %>
</div>