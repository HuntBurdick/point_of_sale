
	<% if @sale.id.blank? %>
		<div class="cart_items">
			<h2>Current Cart</h2>
			<%= render :partial => 'admin/sales/added_item' %>
		</div>
	<% end %>
	<%= render :partial => 'admin/sales/line_items' %>
	<%= semantic_form_for [:admin, @sale] do |f| %>

			<div class="cart_items">
				<h2>Choose Customer</h2>
				<%= f.select :customer_id, Customer.find(:all, :order => 'last_name').collect {|p| [ "#{p.last_name}, #{p.first_name}", p.id ]}, {:include_blank => true, :default => nil} %>
			</div>
			<% unless @sale.customer_id.blank? %>
				<div class="cart_items">
					<h2>Customer Info</h2>
					<p>Name: <%= @sale.customer.last_name %>, <%= @sale.customer.first_name %></p>
					<p>Phone Number: <%= @sale.customer.phone_number %></p>
					<p>Email Address: <%= @sale.customer.email_address %></p>
				</div>
			<% end %>
			
			<h2>Type of Transaction</h2>
			<%= f.inputs :sale, :special_order, :work_order %>
			<div class="work_order_items">
				<h2>Items Dropped Off</h2>
				<%= f.inputs :item_1, :item_1_description, :item_2, :item_2_description, :item_3, :item_3_description, :dropped_off_date, :promised_by_date, :work_order_called, :work_order_paid %>
			</div>
			<%= f.inputs :comments %>
			<% unless @sale.id.blank? %>
				<div class="cart_items">
					<h2>Payment Method</h2>
						<%= f.select :payment_type, ['Credit Card', 'Cash', 'Check'], {:include_blank => true} %>
				</div>
				<%= f.inputs :total_amount, :amount_paid, :sale_paid, :work_order_paid %>
				<% unless @sale.amount_paid.blank? %>
					<h2>Change: <%= @sale.amount_paid - @sale.total_amount %></h2>
				<% end %>
			<% end %>
			<%= f.actions %>
	<% end %>
