<% @items = Item.find(:all).sort_by{|p| p.name.downcase} %>
	<% for item in @items %>
		<div class="cart_item">
			<%= link_to item.name, url_for(:controller => 'sales', :action => 'add_item', :product_id => item.id), :format => :js, :remote => true %> - <%= number_to_currency item.price %>
		</div>
	<% end %>
